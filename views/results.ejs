<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>SubstiBake - Results</title>

    <link rel="stylesheet" href="/styles.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet" />
</head>

<body>
    <header>
        <h1>SubstiBake</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/saved">Saved substitutions</a>
        </nav>
    </header>

    <main>
        <section class="card">
            <h2>Substitution results</h2>

            <% if (ingredientName) { %>
                <p>
                    Ingredient:
                    <strong>
                        <%= ingredientName %>
                    </strong>
                </p>
                <% } %>

                    <% if (error) { %>
                        <p class="error">
                            <%= error %>
                        </p>
                        <% } else if (substitutes && substitutes.length> 0) { %>
                            <p>Select which substitution you want to save:</p>
                            <ul class="sub-list">
                                <% substitutes.forEach(function(sub) { %>
                                    <li>
                                        <form action="/saved" method="POST" class="inline-form">
                                            <span>
                                                <%= sub %>
                                            </span>
                                            <input type="hidden" name="ingredientName" value="<%= ingredientName %>" />
                                            <input type="hidden" name="substitutionText" value="<%= sub %>" />
                                            <button type="submit">Save this</button>
                                        </form>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } else { %>
                                <p>No substitutions found.</p>
                                <% } %>


        </section>
    </main>

    <footer>
        <p>SubstiBake &copy; <%= new Date().getFullYear() %>
        </p>
    </footer>
</body>

</html>